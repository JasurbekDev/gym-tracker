<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bold_poppins_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:height">60dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="light_blue_rectangle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/light_blue_rectangle</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="light_blue_rectangle_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/light_blue_rectangle</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/light_blue_text</item>
        <item name="maxLines">1</item>
    </style>

    <style name="error_text">
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="dark_gray_text">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:layout_marginBottom">22dp</item>
    </style>

    <style name="root_layout_style">
        <item name="android:background">@color/dark_blue</item>
        <item name="android:paddingStart">@dimen/edge_margins</item>
        <item name="android:paddingEnd">@dimen/edge_margins</item>
    </style>

</resources>